<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    tools:context=".ui.pantalla_configuracion">

    <!-- Título del Fragment -->
    <TextView
        android:id="@+id/tituloConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración de Notificaciones"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textAlignment="center"/>

    <!-- Casilla para anticipación de las notificaciones -->
    <TextView
        android:id="@+id/label_anticipacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anticipación de Notificación (minutos)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloConfiguracion"
        android:layout_marginTop="32dp"/>

    <SeekBar
        android:id="@+id/seekBarAnticipacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="120"
        android:progress="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_anticipacion"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/anticipacionValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minutos"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarAnticipacion"
        android:layout_marginTop="8dp"/>

    <!-- Opción para habilitar/deshabilitar notificaciones -->
    <CheckBox
        android:id="@+id/checkBoxNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitar Notificaciones"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anticipacionValor"
        android:layout_marginTop="24dp"/>

    <!-- Opción para cambiar el tema -->
    <CheckBox
        android:id="@+id/checkBoxTemaOscuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Oscuro"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNotificaciones"
        android:layout_marginTop="16dp"/>

    <!-- Botón para confirmar cambios -->
    <Button
        android:id="@+id/btnConfirmarCambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Cambios"
        android:backgroundTint="#E50000"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
